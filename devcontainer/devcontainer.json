{
    "name": "EduFlow-AcademySuite Environment",
    "dockerComposeFile": [
        "../infra/docker-compose.yml"
    ],
    "service": "web",
    "workspaceFolder": "/usr/src/app",
    "forwardPorts": [
        8000
    ],
    "postCreateCommand": "python manage.py migrate && python manage.py createsuperuser",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.django",
                "batisteo.vscode-django"
            ]
        }
    }
}